@model MyForum.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container row mt-5">
    <div class="col-sm-6">
        <h5 class="text-center" style="color: #999999">СОЗДАНИЕ АККАУНТА</h5>
        <p class="" style="color: #a1a9b1; font-size:13px">
            Для входа в систему вы должны быть зарегистрированы.
            Регистрация занимает всего несколько минут, но дает вам расширенные возможности.
            Администратор форума может также предоставить дополнительные разрешения зарегистрированным пользователям.
            Перед регистрацией убедитесь, что вы знакомы с нашими условиями использования и соответствующими политиками.
            Пожалуйста, убедитесь, что вы прочитали все правила форума, перемещаясь по доске.
        </p>

        <div class="form-group">
            <a class="btn btn-dark" asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </div>
    <div class="col-sm-6">
        <h5 class="text-center" style="color: #999999">ВХОД В АККАУНТ</h5>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <div class="form-icon">
                        <input type="email" class="form-control input-lg" asp-for="Email" placeholder="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-icon">
                        <input type="password" class="form-control input-lg" asp-for="Password" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>