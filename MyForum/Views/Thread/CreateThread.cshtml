@model MyForum.ViewModels.Theme.ThreadsViewModels
@{
    ViewData["Title"] = "Новая тема";
}
<form asp-controller="Thread" asp-action="CreateThread" method="post">
    <script src="~/js/ckeditor/ckeditor.js"></script>

    <div class="col-12 p-3 mt-5" style="background-color: white; border: 3px solid #d8e3e6;border-radius:10px">
        <h5 class="border-bottom col-12 pb-3">Новая тема</h5>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Кто может оставлять комментарии:</label>
            <select class="form-control" asp-for="CommentType">
              <option>Все пользователи</option>
              <option>Только модераторы и администраторы</option>
            </select>
         </div>
        <div class="form-group">
            <div class="form-icon">
                <input type="text" class="form-control input-lg" asp-for="Title" placeholder="Название темы">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="centered">
            <textarea id="editor1" asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Создать" class="btn btn btn-primary" />
        </div>
    </div>
    <script>
        CKEDITOR.replace('editor1');
    </script>
</form>





