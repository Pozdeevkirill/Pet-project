@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/spoiler.css" />
    <link href="~/css/theme/light.css" rel="stylesheet" />
</head>

<body>
    <header style="text-decoration:none;">
        <nav class="navbar navbar-expand-lg navbar-dark container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Все темы<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Thread" asp-action="CreateThread">Создать тему</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item dropdown border-color">
                        <a class="nav nav-link name" href="#" style="text-decoration: none; color: inherit; " id="navbarDropdown2" data-toggle="dropdown" aria-expanded="false">
                            @User.Identity.Name
                        </a>
                        <div class="dropdown-menu p-2 menu-bg-color" aria-labelledby="navbarDropdown">
                            <div class="">
                                <span>
                                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary btn-sm">Профиль</a>
                                </span>
                            </div>
                            @*<div class="">
                                <div class="radio-toolbar-one">

                                    <input class="color1"type="radio" id="radio1" name="radios-one" value="all" checked>
                                    <label class="color1"for="radio1"></label>

                                    <input class="color2" type="radio" id="radio2" name="radios-one" value="false">
                                    <label class="color2" for="radio2"></label>



                                </div>
                            </div>*@
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary btn-sm">Logout</a>
                        </div>
                    </div>
                }
                else
                {
                    <form class="form-inline my-2 my-lg-0">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Create Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    </form>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://kit.fontawesome.com/341698100d.js" crossorigin="anonymous"></script>
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/spoiler.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>